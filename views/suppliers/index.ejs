<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary">
        <i class="fas fa-building me-2"></i> <%= title %>
    </h1>
    <a href="/admin/suppliers/add" class="btn btn-success btn-lg px-4 shadow-sm">
        <i class="fas fa-plus me-1"></i> Thêm mới
    </a>
</div>

<!-- Bảng nhà cung cấp -->
<div class="card shadow-sm border-0 rounded-3 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark bg-gradient">
                <tr>
                    <th class="text-center" style="width: 30%;">Tên nhà cung cấp</th>
                    <th class="text-center" style="width: 35%;">Địa chỉ</th>
                    <th class="text-center" style="width: 20%;">Số điện thoại</th>
                    <th class="text-center" style="width: 15%;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% if (suppliers.length > 0) { %>
                    <% suppliers.forEach(supplier => { %>
                        <tr class="hover-bg-light">
                            <td class="fw-semibold text-dark">
                                <%= supplier.name %>
                            </td>
                            <td class="text-muted">
                                <%= supplier.address || 'Chưa cập nhật' %>
                            </td>
                            <td class="text-success fw-medium">
                                <%= supplier.phone || 'Chưa có' %>
                            </td>
                            <td class="text-center">
                                <a href="/admin/suppliers/edit/<%= supplier._id %>" 
                                   class="btn btn-warning btn-sm px-3 shadow-sm"
                                   title="Sửa nhà cung cấp">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/admin/suppliers/delete/<%= supplier._id %>" 
                                      method="POST" 
                                      class="d-inline" 
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này?');">
                                    <button type="submit" 
                                            class="btn btn-danger btn-sm px-3 shadow-sm"
                                            title="Xóa nhà cung cấp">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-truck-loading fa-3x mb-3 opacity-50"></i>
                            <p class="fs-5 mb-0">Chưa có nhà cung cấp nào.</p>
                            <a href="/admin/suppliers/add" class="btn btn-primary mt-2">
                                <i class="fas fa-plus me-1"></i> Thêm nhà cung cấp đầu tiên
                            </a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>